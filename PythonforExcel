import pandas as pd
import mysql.connector
from mysql.connector import errorcode
try:
	db_connection = mysql.connector.connect(host='localhost', user='root', password='12345', database='plataforma_ead')
	print("BOA MANO! CONECTOU!")
except mysql.connector.Error as error:
	if error.errno == errorcode.ER_BAD_DB_ERROR:
		print("Não achei o banco de dados, não")
	elif error.errno == errorcode.ER_ACCESS_DENIED_ERROR:
		print("Acho que tu errou o nome ou a senha")
	else:
		print(error)
else:
	db_connection.close()
	
cnx = mysql.connector.connect
cur = cnx.cursor
cur.execute("SHOW STATUS LIKE 'usuario'")
print(cur.fetchone())
cur.close()
cnx.close()
